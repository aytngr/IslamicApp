<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.ChapterSettingsFragment"
    android:paddingBottom="60dp"
    android:background="@color/background"
    android:theme="@style/TextViewTheme">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quran"
                android:textSize="20sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_color"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/translation_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Tərcümə"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/selected_translation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Əlixan Musayev"
                android:textSize="18sp"
                android:layout_marginStart="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/arabic_font_size_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Ərəbcə yazı ölçüsü"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/selected_arabic_font_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20sp"
                android:textSize="18sp"
                android:layout_marginStart="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/translation_font_size_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Tərcümə yazı ölçüsü"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/selected_translation_font_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20sp"
                android:textSize="18sp"
                android:layout_marginStart="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/display_text_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Yazı dili"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/LangRGroup"
                android:paddingStart="5dp">

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AR-AZ"
                    android:id="@+id/araz"
                    android:layout_margin="5dp"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AR"
                    android:id="@+id/ar"
                    android:layout_margin="5dp"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AZ"
                    android:id="@+id/az"
                    android:layout_margin="5dp"/>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ümumi"
                android:textSize="20sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_color"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/theme_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tema"
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/selected_theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Light"
                android:textSize="18sp"
                android:layout_marginStart="15dp"/>
        </LinearLayout>

    </LinearLayout>



</ScrollView>