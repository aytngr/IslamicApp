<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SettingsFragment"
    android:paddingBottom="25dp"
    android:background="@drawable/bottom_sheet_bg"
    android:theme="@style/TextViewTheme"
    android:id="@+id/notf_settings_layout"
    android:paddingVertical="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/sticky_notf_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="Daimi bildiriş"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text1"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:text="Namaz vaxtlarını bildiriş panelində \ngöstərir" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_sticky_notf_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:textSize="18sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/icon_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nişan"
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/selected_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tətbiq nişanı"
                android:layout_marginStart="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/style_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stil"
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/selected_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stil 1"
                android:layout_marginStart="10dp"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/bg_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:text="Arxa fon rəngi"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/selected_notf_bg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/white_color_drawable" />
        </RelativeLayout>

    </LinearLayout>



</ScrollView>