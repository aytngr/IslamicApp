<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ayat"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@color/background"
    android:theme="@style/TextViewTheme">
    <TextView
        android:id="@+id/tv_ayat_arabic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="بِسْمِ اللَّهِ الرَّحْمَٰنِ الرَّحِيمِ"
        android:textSize="25sp"
        android:layout_marginStart="10dp"
        android:textDirection="rtl"
        android:fontFamily="@font/arabic_font"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginStart="10dp">
        <TextView
            android:id="@+id/tv_ayat_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1. "
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tv_ayat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Azeri"
            android:textSize="20sp"
            />
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#17000000"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp" />
</LinearLayout>